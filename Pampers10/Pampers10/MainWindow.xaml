<Window x:Class="Pampers10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF App" Height="350" Width="525">
    <Grid x:Name="Color" Margin="0,-2,0,0">
    <DockPanel Margin="0,1,0,0">

            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Информация">
                    <MenuItem Header="Тут инфа" Click="MenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Закрытие">
                    <MenuItem  Header="Закрыть" Click="MenuItem_Click2"/>
                </MenuItem>
            </Menu>


            <MenuItem DockPanel.Dock="Top" Height="250" Header="" RenderTransformOrigin="0.236,0.688" Margin="5000,0,0,0"/>
            <Button Content="Синий" Click="SetBlue_Click" Margin="0,-250,0,268" RenderTransformOrigin="0.494,0.269"/>
            <Button Content="Зеленый" Click="SetGreen_Click" Margin="0,-250,0,268"/>
            <Button Content="Красный" Click="SetRed_Click" Margin="0,-250,0,268"/>

            <StatusBar DockPanel.Dock="Bottom" Margin="-144,0,0,0">
                <StatusBarItem x:Name="StatusBarItem" Content="Готово" Width="303" RenderTransformOrigin="0.200,0.433" />
            </StatusBar>


        </DockPanel> 
 </Grid>   
</Window>
